<div class="jumbotron">
  <div class="container">
      <form id="login-form" class="form-signin" action="login/check" method="post">
          <div class="row">
              <div class="col-md-4 col-sm-1"></div>
              <div class="col-md-4 col-sm-10">
                  <input name="username" type="text" class="form-control" placeholder="Username"/>
              </div>
              <div class="col-md-4 col-sm-1"></div>
          </div>
          <div class="row">
              <div class="col-md-4 col-sm-1"></div>
              <div class="col-md-4 col-sm-10">
                  <input name="passwd" type="password"  class="form-control password" placeholder="Password"/>
              </div>
              <div class="col-md-4 col-sm-1"></div>
          </div>

          <div class="row">
              <div class="col-md-4 col-sm-1"></div>
              <div class="col-md-4 col-sm-10">
                  <button type="submit" name="submit" class="btn btn-lg btn-block btn-primary">Login</button>
              </div>
              <div class="col-md-4 col-sm-1"></div>
          </div>

      </form>
  </div>
</div>
